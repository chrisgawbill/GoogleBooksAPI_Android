<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="32dp"
        android:text="@string/enter_in_a_book_name"
        app:layout_constraintBottom_toTopOf="@+id/enterBookNameText"
        app:layout_constraintStart_toStartOf="@+id/enterBookNameText" />

    <EditText
        android:id="@+id/enterBookNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:ems="10"
        android:hint="@string/book_name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.223"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getAuthorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/find_author"
        app:layout_constraintBaseline_toBaselineOf="@+id/enterBookNameText"
        app:layout_constraintStart_toEndOf="@+id/enterBookNameText" />

    <TextView
        android:id="@+id/bookNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="13dp"
        android:text="@string/book_name_result"
        app:layout_constraintEnd_toEndOf="@+id/enterBookNameText"
        app:layout_constraintTop_toBottomOf="@+id/enterBookNameText" />

    <TextView
        android:id="@+id/authorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:text="@string/author"
        app:layout_constraintStart_toStartOf="@+id/bookNameText"
        app:layout_constraintTop_toBottomOf="@+id/bookNameText" />

</androidx.constraintlayout.widget.ConstraintLayout>